    "Framework",
    "Library",
    "Design",
    "UI",
    "UX",
    "SCSS"
  ],
  "author": "Markus Johansen",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ChimeraCSS/ChimeraCSS/issues"
  },
  "homepage": "https://github.com/ChimeraCSS/ChimeraCSS#readme",
  "devDependencies": {
    "prettier": "3.3.2",
    "sass": "^1.68.0"
